# API endpoint for backend
VITE_API_URL=https://api.example.com

# Feature flags
VITE_FEATURE_X=true

# Analytics key (do not use real secrets in example)
VITE_ANALYTICS_KEY=your-analytics-key-here

# SonarCloud configuration (used by CI workflows, not by the app runtime)
# For forks, replace these with your own organization and project keys.
SONAR_ORGANIZATION=your-sonar-organization
SONAR_PROJECT_KEY=your-sonar-project-key

# SONAR_TOKEN should be stored as a GitHub Actions secret, not committed locally.
SONAR_TOKEN=your-sonar-token-here

# To enable or disable SonarCloud analysis in CI, set the following variable in github environment variables.
RUN_SONARCLOUD=false

# Local development only: set to "true" to temporarily skip
# commit message linting enforced by Husky + commitlint.
# This is read by the .husky/commit-msg hook, not by Vite.
SKIP_COMMITLINT=false
