#!/usr/bin/env bash
# Secret scanning pre-commit hook using Gitleaks
# This script checks for secrets in staged files before allowing a commit

set -e

# Color codes for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

echo -e "${YELLOW}üîç Running secret scanning...${NC}"

# Check if Gitleaks is installed
if ! command -v gitleaks &> /dev/null; then
    echo -e "${YELLOW}‚ö†Ô∏è  Gitleaks is not installed.${NC}"
    echo ""
    echo "Please install Gitleaks to enable secret scanning:"
    echo ""
    echo "üì¶ macOS:"
    echo "   brew install gitleaks"
    echo ""
    echo "üì¶ Linux:"
    echo "   # Download and install to user directory"
    echo "   mkdir -p ~/.local/bin"
    echo "   curl -sSfL https://github.com/gitleaks/gitleaks/releases/latest/download/gitleaks_linux_x64.tar.gz | tar -xz"
    echo "   mv gitleaks ~/.local/bin/"
    echo "   export PATH=\"\$HOME/.local/bin:\$PATH\""
    echo ""
    echo "üì¶ Windows:"
    echo "   # Download from: https://github.com/gitleaks/gitleaks/releases"
    echo ""
    echo "‚ö†Ô∏è  Skipping secret scanning until Gitleaks is installed."
    echo "   To bypass all pre-commit checks: git commit --no-verify"
    echo ""
    exit 0
fi

# Run Gitleaks on staged changes
if gitleaks protect --staged --config .gitleaks.toml; then
    echo -e "${GREEN}‚úÖ No secrets detected${NC}"
    exit 0
else
    EXIT_CODE=$?
    echo ""
    echo -e "${RED}‚ùå Secrets detected in your staged changes!${NC}"
    echo ""
    echo "Gitleaks has detected potential secrets in your commit."
    echo ""
    echo "What to do:"
    echo "  1. Review the findings above"
    echo "  2. Remove any real secrets from your code"
    echo "  3. Use environment variables for sensitive data"
    echo ""
    echo "If this is a false positive:"
    echo "  1. Run: gitleaks detect --report-format json --report-path gitleaks-report.json"
    echo "  2. Copy the 'Fingerprint' from the report"
    echo "  3. Add it to .gitleaksignore in this format:"
    echo "     <fingerprint>:<file>:<line>"
    echo "  4. Commit again"
    echo ""
    echo "To skip this check (NOT RECOMMENDED):"
    echo "  git commit --no-verify"
    echo ""
    exit $EXIT_CODE
fi
