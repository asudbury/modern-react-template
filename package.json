{
  "name": "modern-react-template",
  "private": true,
  "version": "0.0.10",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "lint:fix": "eslint \"src/**/*.{ts,tsx}\" --fix",
    "prettier": "prettier --write \"src/**/*.{ts,tsx,css}\"",
    "preview": "vite preview",
    "test": "vitest",
    "test:unit": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:e2e": "playwright test",
    "prepare": "husky",
    "docs:md": "typedoc --options typedoc.json",
    "docs:html": "typedoc --options typedoc.html.json",
    "docs": "npm run docs:md && npm run docs:html",
    "update:gh-page-details": "node ./scripts/update-gh-pages-details.cjs dist/gh-pages-index.html",
    "build:gh-pages": "ENABLE_GH_PAGES=true npm run build && npm run update:gh-page-details",
    "pre": "npm run prettier && npm run test && npm run lint && npm run build && npm run test:e2e",
    "knip": "knip",
    "knip:ci": "knip --ci",
    "secrets:scan": "gitleaks detect --config .gitleaks.toml",
    "secrets:scan-staged": "gitleaks protect --staged --config .gitleaks.toml",
    "secrets:baseline": "gitleaks detect --report-format json --report-path gitleaks-baseline.json --config .gitleaks.toml",
    "cleanup": "node ./scripts/cleanup-repo.cjs"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.90.12",
    "@tanstack/react-router": "^1.143.6",
    "class-variance-authority": "^0.7.1",
    "lucide-react": "^0.562.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-error-boundary": "^6.0.0",
    "uuid": "^13.0.0",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@eslint/js": "^9.39.1",
    "@playwright/test": "^1.57.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.10.4",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react": "^5.1.1",
    "@vitest/browser-playwright": "^4.0.16",
    "@vitest/coverage-v8": "^4.0.16",
    "@vitest/ui": "^4.0.16",
    "axe-core": "^4.11.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.26",
    "eslint-plugin-testing-library": "^7.15.3",
    "eslint-plugin-vitest": "^0.5.4",
    "gitleaks": "^1.0.0",
    "globals": "^16.5.0",
    "happy-dom": "^20.0.11",
    "husky": "^9.1.7",
    "jsdoc": "^4.0.5",
    "jsdoc-to-markdown": "^9.1.3",
    "jsdom": "^27.2.0",
    "knip": "^5.77.1",
    "lint-staged": "^16.2.7",
    "playwright": "^1.57.0",
    "prettier": "^3.7.4",
    "typedoc": "^0.28.15",
    "typedoc-plugin-markdown": "^4.9.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.50.1",
    "vite": "^7.3.0",
    "vitest": "^4.0.16"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "src/**/*.css": [
      "prettier --write"
    ]
  }
}
